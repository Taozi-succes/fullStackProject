# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# 数据库配置
DATABASE_URL="mysql://root:1234@localhost:3306/express_demo"

# JWT配置
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# 验证码配置
CAPTCHA_LENGTH=4
CAPTCHA_WIDTH=120
CAPTCHA_HEIGHT=40
CAPTCHA_FONT_SIZE=50
CAPTCHA_NOISE=2
CAPTCHA_COLOR=true

# 验证码存储配置
# 设置为 true 使用Redis存储，false 使用内存存储
CAPTCHA_USE_REDIS=false

# Redis配置（当CAPTCHA_USE_REDIS=true时生效）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=express_app:
REDIS_CONNECT_TIMEOUT=10000
REDIS_LAZY_CONNECT=true
REDIS_RETRY_DELAY=100
REDIS_MAX_RETRIES=3

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=*
HELMET_ENABLED=true

# 文件上传配置
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DIR=uploads

# 日志配置
LOG_LEVEL=info
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# ai模型配置
AI_MODEL_API_KEY=
AI_MODEL_NAME=ernie-3.5-8k